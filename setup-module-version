#!/bin/bash

ORACLE_CLIENT_VERSION=21c # 23ai bug OCI_ATTR_PASSWORD
PHP_MAJOR_VERSION=8.4

WITH_ORACLE=1
WITH_GS=1
WITH_CURL=1
WITH_LDAP=1
WITH_NODE=0
NODE_VERSION=19.9.0
NODE_ARCH=x64
# ARM64 Node
# NODE_ARCH=armv6l
BUILD_CANVAS=0
WITH_SQLITE=1
WITH_POSTGRESQL=1
WITH_MEMCACHE=1
WITH_PHP_COMPOSER=1
WITH_PDO_MYSQL=1
WITH_GD=1
WITH_IMAGEMAGICK=1
WITH_ZIP=1
WITH_APCU=1
WITH_OPENJDK=0
WITH_SOAP=1


case $ORACLE_CLIENT_VERSION in
    23ai)
       ORACLE_VERSION=2370000
       ORACLE_MAJOR=23
       ORACLE_MINOR=7.0.25.01
    ;;
    *)
       ORACLE_VERSION=2117000
       ORACLE_MAJOR=21
       ORACLE_MINOR=17.0.0.0dbru
    ;;
esac

case $PHP_MAJOR_VERSION in
        8.4)
	   OCI8_VERSION=3.4.0
	   PDO_OCI_VERSION=1.1.0
           IMAGICK_VERSION=3.7.0
	   MEMCACHE_VERSION=8.2
        ;;
	8.1)
	   OCI8_VERSION=3.2.1
           IMAGICK_VERSION=3.7.0
	   MEMCACHE_VERSION=8.0 
	;;
        7.4)
	   OCI8_VERSION=2.2.0
	   IMAGICK_VERSION=3.7.0
	   MEMCACHE_VERSION=4.0.5.2
	;;
	*)
	echo "EMPTY"
	;;
esac
